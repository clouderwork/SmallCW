page {
  display: block;
  min-height: 100%;
  background-color: #EFEFF4;
}
.signin-container {
  margin-top: 20rpx;
}
.section {
  border-bottom: 2rpx solid #f4f4f4;
  padding: 24rpx 30rpx;
  background: #fff;
  display: flex;
}
.section:last-child {
  border-bottom: none;
}
input {
  font-size: 30rpx;
  color: #4b4b4b4;
  text-align: left;
  margin-right: 40rpx;
  flex: 1;
}
input:last-child {
  border-bottom: none;
}
.btn-signin button {
  font-size: 38rpx;
  color: #ff6700;
  margin: 20rpx 30rpx 0;
  background: #ffffff;
  border: 2rpx solid #ff6700;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}
.btn-signin .disabled {
  background-color: #e2e2e2;
  color: #9e9e9e;
  border: 0;
}

.sign-placeholder {
  color: #cfcfcf;
}
.icon-eye, .icon-eye-hide {
  width: 40rpx;
  height: 34rpx;
  margin-top: 12rpx;
  cursor: pointer;
}
.icon-eye {
  height: 25rpx;
  margin-top: 16rpx;
}
.del-content {
  width: 36rpx;
  height: 36rpx;
  margin-top:8rpx;
}
