<!--index.wxml-->
<view class="project-details">
  <p class="job-name">{{job.name}}</p>
  <block wx:if="{{job.paymethod == 'hour'}}">
    <p class="job-price">{{job.hourPrice}}<i>(按工时付费)</i></p>
    <p class="work-time">工作时长:<span>{{job.duration}}，{{job.workload}}</span></p>
  </block>
</view>

<view class="job-company">
  <image src="{{job.team.avatar}}" class="avatar"/>
  <div class="company-score">
    <p>{{job.team.name}}<i>(需求方)</i></p>
  </div>
</view>


<view class="job-info">
  <ul>
    <li v-if="job.category">
      <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/type_icon.png"/>
      <label>类型：</label>
      {{job.category.name}}
    </li>
    <li>
      <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/people_icon.png"/>
      <label>招聘：</label>
      {{job.hires}}人
    </li>
    <li>
      <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/level_icon.png"/>
      <label>级别：</label>
      {{job.level}}
    </li>
    <li>
      <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/person_icon.png"/>
      <label>报名人数：</label>{{job.proposal.proposal}}人
    </li>
    <li>
      <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/person_num_icon.png"/>
      <label>面试人数：</label>{{job.proposal.interview}}人
    </li>
    <li>
      <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/time_icon.png"/>
      <label>发布时间：</label><time>{{job.publish_at}}</time>
    </li>
  </ul>
</view>
