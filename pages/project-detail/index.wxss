page {
  background-color: #EFEFF4;
}

.project-details {
  border: 2rpx solid #f4f4f4;
  border-left: none;
  border-right: none;
  background-color: #fff;
  padding: 30rpx 30rpx;
  position: relative;
}

.job-name {
  display: block;
  color: #4b4b4b;
  line-height: 48rpx;
  font-size: 36rpx;
}

.job-method {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.job-price {
  display: block;
  color: #ff6700;
  font-size: 36rpx;
  flex: 1;
}

.job-create {
  font-size: 24rpx;
  color: #cacaca;
  text-align: right;
  width: 150rpx;
}

.job-price i {
  color: #aaaaaa;
  font-size: 26rpx;
  font-style: normal;
  padding-left: 20rpx;
  display: inline-block;
}
.work-box {
  border-radius: 6rpx;
  margin-top: 35rpx;
  display: block;
  background-color: #f4f4f4;
  border: 2rpx solid #f8f8f8;
  padding: 0 25rpx 20rpx;
}

.work-box:before {
  content: '';
  height: 30rpx;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 30rpx solid #f4f4f4;
  position: absolute;
  bottom: 145rpx;
  left: 50rpx;
}
.work-box p {
  display: block;
  color: #777;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.work-box p span {
  color: #f8bb00;
  display: inline-block;
  padding-left: 10rpx;
}

.job-company {
  display: flex;
  width: 100%;
  padding: 20rpx 30rpx;
  color: #6e6e70;
  font-size: 26rpx;
  border-bottom: 2rpx solid #f4f4f4;
  box-sizing: border-box;
  align-items: center;
  -webkit-box-align: center;
  background-color: #fff;
}

.job-company .avatar {
  display: inline-block;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  margin-right:  20rpx;
}

.company-score {
  display: block;
  flex: 1;
}

.company-score p i {
  color: #aaaaaa;
}

.job-info {
  color: #4b4b4b;
  font-size: 30rpx;
  line-height: 1.7;
  background-color: #fff;
}

.mr-top {
  margin-top: 20rpx;
}

.job-info ul{
  display: block;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}
.job-info li {
  display: block;
  height: 40rpx;
  color: 4b4b4b;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.job-info label {
  display: inline-block;
  font-size: 26rpx;
  color: #777777;
  vertical-align: middle;
}

.job-description {
  border-top: 20rpx solid #f4f4f4;
  background-color: #fff;
}

.job-info .icon {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.job-description .nav{
  display: block;
  margin-top: 20rpx;
  padding: 0 80rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #f4f4f4;
  background-color: #fff;
  text-align: center;
}

.job-description .nav li {
  display: inline-block;
  margin: 0 40rpx;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #777777;
}
.job-description .active {
  color: #ff6700 !important;
  border-bottom: 2rpx solid #ff6700;
}

.job-description .description {
  padding: 30rpx;
  font-size: 28rpx;
  color: #4b4b4b;
  line-height: 1.5;
  background-color: #fff;
}
.panel-more {
  display: block;
  padding: 0 30rpx;
}

.panel-more li {
  display: flex;
  padding: 15rpx 5rpx;
  border-bottom: 2rpx solid #f4f4f4;
  font-size: 30rpx;
  color: #4b4b4b;
  line-height: 50rpx;
}
.list-name {
  min-width: 150rpx;
  color: #aaaaaa;
  font-size: 30rpx;
}
.skills-box {
  line-height: 60rpx !important;
}
.skills {
  flex: 1;
  right: 0;
}
.skills span{
  padding: 0 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  border: 2rpx solid #cacaca;
  border-radius: 24rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #4b4b4b;
}

.switch-role {
  background-color:#fff;
  line-height:100rpx;
  text-align:center;
  font-size:34rpx;
  color:#ff6700;
  margin-top:40rpx;
  border-top: 2rpx solid #e2e2e9;
}

.panel-more .text {
  text-align: right;
  font-size: 30rpx;
  color: #4b4b4b;
  flex: 1;
}

