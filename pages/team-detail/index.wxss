.team-info {
  padding: 16px 0;
}
.team-info .avatar {
  display: block;
  width: 80px;
  height: 80px;
  margin: 0 auto;
  border-radius: 80px;
}

.team-info .nickname {
  display: block;
  margin: 12px auto;
  text-align: center;
  color: #ff6700;
  font-size: 16px;
}
.team-info .team-hourly-money {
  display: block;
  margin: 12px auto;
  text-align: center;
  color: #666;
  font-weight: 700;
  font-size: 13px;
}

.team-info .icon {
  width: 18px;
  height: 16px;
}

.team-slogan {
  display: block;
  margin: 12px auto 0;
  text-align: center;
  color: #666;
  font-size: 13px;
}

.team-info-list {
  border-top: 1px solid #f4f4f4;
  padding: 15px;
  font-size: 15px;
  display: flex;
  line-height: 20px;
}

.team-info-list label {
  width: 63px;
  margin-right: 12px;
  color: #aaaaaa;
  white-space: nowrap;
  display: block;
}

.team-info-list span {
  display: block;
  font-size: 15px;
  flex: 1;
  word-break: break-all;
  word-wrap: break-word;
}

.team-card {
  border-top: 12px solid #f4f4f4;
}

.team-card .title {
  display: flex;
  height: 40px;
  padding: 0 15px;
  line-height: 40px;
  font-size: 16px;
  font-weight: 400;
  color: #777777;
  border-bottom: 1px solid #f4f4f4;
}

.team-card .body {
  height: 50px;
  line-height: 50px;
  padding-left: 16px;
  font-size: 15px;
}

.team-card label {
  color: #aaaaaa;
  padding-right: 5px;
}

.skill span {
  display: inline-block;
  padding: 4px 9px;
  margin-right: 7px;
  margin-bottom: 7px;
  font-size: 12px;
  color: #aaaaaa;
  border: 1px solid #aaaaaa;
  border-radius: 18px;
  line-height: 1;
}

.team-card .title span{
  flex: 1;
  width: 100%;
  text-align: right;
}

.team-card .price-info {
  color: #9e9e9e;
  font-size: 1.3rem;
  padding-top: .7rem;
  overflow: hidden;
  line-height: 1.8rem;
}

.team-card .price-info .price {
  color: #ff6700;
  font-size: 1.6rem;
  float: left;
  padding-right: 10px;
  position: relative;
  top: 1px;
}

.team-card .price-info .time {
  color: #cfcfcf;
  float: right;
}

.team-card .score-star {
  padding: 8px 15px;
  display: inline-block;
}

.team-card .score-star .star-bg {
  background: url(./images/icon-xing-gray.png) no-repeat left center;
  background-size: 200rpx 40rpx;
}

.team-card .score-star .star-bg .star {
  display: inline-block;
  width: 200rpx;
  height: 40rpx;
  margin-bottom:-4rpx;
}

.icon-arrow {
  width: 8px;
  height: 14px;
  margin-left: 8px;
  vertical-align: -1px;
}

.icon-address {
  width: 13px;
  height: 16px;
  margin-right: 10px;
  vertical-align: -1px;
}

.icon-time {
  width: 16px;
  height: 16px;
  margin-right: 10px;
  vertical-align: -1px;
}

.team-owner {
  color: #4b4b4b;
  font-size: 15px;
  padding: 13px 15px;
}

.address {
  margin-right: 20px;
}
.team-owner p {
  display: block;
  line-height: 28px;
}
.project-list {
  color: #4b4b4b;
  font-size: 15px;
  padding: 13px 15px;
}

.project-list .name {
  display: block;
  font-size: 15px;
  line-height: 1;
  color: #4b4b4b;
}

.project-list .info {
  display: flex;
  padding: 8px 0;
  font-size: 13px;
  color: #777;
}

.project-list .info time{
  display: block;
  flex: 1;
  color: #aaa;
  text-align: right;
}

.icon-time-sm {
  width: 13px;
  height: 12px;
  margin-right: 10px;
  vertical-align: -2px;
}

.project-list .description {
  word-break: break-all;
  font-size: 13px;
  color: #6e6e70;
}

.project-list .description span {
  color: #9e9e9e;
}
.no-works {
  color: #cfcfcf;
  font-size: 30rpx;
  line-height: 100rpx;
  padding-left: 35rpx;
}
