<view class="team-info">
  <image class="avatar" src="{{profile.avatar}}" />
  <text class="nickname">{{profile.name}}</text>
  <p class="team-hourly-money">
    <image class="icon" src="http://static.clouderwork.com/m-test/dist/img/hourly_icon.png" />
    {{profile.hourly_min}}元~{{profile.hourly_max}}元/小时
  </p>
  <text class="team-slogan">{{profile.slogan}}</text>
</view>
<view class="team-info-list">
  <label>团队简介</label>
  <span>{{profile.overview}}</span>
</view>

<view class="team-info-list">
  <label>经验水平</label>
  <span>{{profile.levelStr}}</span>
</view>

<view class="team-card">
  <text class="title">语言水平</text>
  <view class="body">
    <label>英语:</label>
    <span>{{profile.englishStr}}</span>
  </view>
  <block wx:for="{{profile.languages}}" wx:key="id" wx:for-item="language">
    <view class="body">
      <label>{{language.name}}:</label>
      <span>{{language.langStr}}</span>
    </view>
  </block>
</view>

<view class="team-card">
  <text class="title">擅长技能</text>
  <view class="body skill">
    <block wx:for="{{profile.skills}}" wx:key="id" wx:for-item="skill">
      <span>{{skill}}</span>
    </block>
  </view>
</view>

<view class="team-card">
  <p class="title">团队成员<span>{{profile.total_num}}人<image class="icon-arrow" src="data:image/png;base64," /></span></p>
</view>

<view class="team-card" >
  <text class="title">工作历时及反馈</text>
  <block wx:for="{{contracts}}" wx:key="id" wx:for-item="item">
    <view class="project-list">
      <text class="name">{{item.name}}</text>
      <p class="score-star">
        <span class="star-bg">
          <image class="star" src="./images/icon-xing.png" />
        </span>
      </p>
      <p class="price-info">
        <span class="price">¥ {{item.total_amount}}</span> ({{item.paymethodStr}})
        <span class="time">
          合同期间<time>{{item.time}}</time>
        </span>
      </p>
    </view>
  </block>
</view>

<view class="team-card" wx:if="{{portfolios.length > 0}}">
  <text class="title">成功案例</text>
  <block wx:for="{{portfolios}}" wx:key="id" wx:for-item="item">
    <view class="project-list">
      <text class="name">{{item.name}}</text>
      <p class="info">
        <span>类型：{{item.category.name}}</span>
        <time><image class="icon-time-sm" src="http://static.clouderwork.com/m-test/dist/img/time_icon.png" />{{item.end_at}}</time>
      </p>
      <p class="description">
        <span>项目简介：</span> {{item.description}}
      </p>
    </view>
  </block>
</view>
