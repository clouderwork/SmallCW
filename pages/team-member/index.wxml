<!--index.wxml-->
<view class="member-container">
  <scroll-view style="height: {{windowHeight}}px;" scroll-y="true">
    <block wx:for="{{teams}}" wx:key="id" wx:for-item="team">
      <view class="title-line">
        <text class="title">{{team.titleStr}}</text>
      </view>
      <view class="item">
        <view class="header">
          <image class="avatar" src="{{team.avatar}}"/>
          <view class="main">
            <view class="main-top">
              <text class="name">{{team.name}}</text>
              <view class="role">{{team.title}}</view>
            </view>
            <text class="hour">￥{{team.hourly}}/小时</text>
          </view>
        </view>
        <view class="detail">
          <text class="desc">{{team.overview}}</text>
          <block wx:for="{{team.skills}}" wx:key="*this" wx:for-item="skill">
            <view class="skill">{{skill}}</view>
          </block>
        </view>
      </view>
    </block>
  </scroll-view>
</view>
